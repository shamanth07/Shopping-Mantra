<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="50dp">

    <!-- Title -->
    <TextView
        android:id="@+id/home_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:text="Shop by Category"
        android:textAlignment="center"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <!-- GridLayout for Categories -->
    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/category_grid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/home_title"
        android:padding="16dp"
        app:columnCount="3">

        <!-- T-Shirts -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:tag="T-Shirts"
            android:onClick="openCategory">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/tshirts" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="T-Shirts"
                android:textSize="16sp"
                android:paddingTop="8dp" />
        </LinearLayout>

        <!-- Sports T-Shirts -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:tag="Sports T-Shirts"
            android:onClick="openCategory">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/sports" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sports T-Shirts"
                android:textSize="16sp"
                android:paddingTop="8dp" />
        </LinearLayout>

        <!-- Female Dresses -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:tag="Female Dresses"
            android:onClick="openCategory">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/female_dresses" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Female Dresses"
                android:textSize="16sp"
                android:paddingTop="8dp" />
        </LinearLayout>

        <!-- Sweaters -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:tag="Sweaters"
            android:onClick="openCategory">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/sweather" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Sweaters"
                android:textSize="16sp"
                android:paddingTop="8dp" />
        </LinearLayout>

        <!-- Glasses -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:tag="Glasses"
            android:onClick="openCategory">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/glasses" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Glasses"
                android:textSize="16sp"
                android:paddingTop="8dp" />
        </LinearLayout>

        <!-- Purses and Bags -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:tag="Purses and Bags"
            android:onClick="openCategory">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/purses_bags" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Purses and Bags"
                android:textSize="16sp"
                android:paddingTop="8dp" />
        </LinearLayout>

        <!-- Hats -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:tag="Hats"
            android:onClick="openCategory">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/hats" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hats"
                android:textSize="16sp"
                android:paddingTop="8dp" />
        </LinearLayout>

        <!-- Shoes -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:tag="Shoes"
            android:onClick="openCategory">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/shoess" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Shoes"
                android:textSize="16sp"
                android:paddingTop="8dp" />
        </LinearLayout>

        <!-- Headphones -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:tag="Headphones"
            android:onClick="openCategory">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/headphoness" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Headphones"
                android:textSize="16sp"
                android:paddingTop="8dp" />
        </LinearLayout>

        <!-- Laptops -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:tag="Laptops"
            android:onClick="openCategory">

            <ImageView
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:src="@drawable/laptops" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Laptops"
                android:textSize="16sp"
                android:paddingTop="8dp" />
        </LinearLayout>

        <!-- Watches -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:tag="Watches"
            android:onClick="openCategory">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/watches" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Watches"
                android:textSize="16sp"
                android:paddingTop="8dp" />
        </LinearLayout>

        <!-- Mobile Phones -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="8dp"
            android:tag="Mobile Phones"
            android:onClick="openCategory">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/mobiles" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile Phones"
                android:textSize="16sp"
                android:paddingTop="8dp" />
        </LinearLayout>

    </androidx.gridlayout.widget.GridLayout>

</RelativeLayout>
